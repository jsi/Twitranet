<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.enonic.android.twitranet"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="Twitranett" android:icon="@drawable/enonic" android:debuggable="true">
        <activity android:name="EntryListActivity" android:label="@string/twitranettMainActivity"
                  android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity" android:label="@string/twitranettLoginActivity"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <activity android:name=".preferences.PreferencesListActivity" android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>
</manifest>
